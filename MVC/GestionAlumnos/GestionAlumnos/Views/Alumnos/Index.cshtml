@using GestionAlumnos.ViewModels
@model List<AlumnoProfesorCursoViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Lista Alumnos Cursos Profesores</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Alumno</th>
                    <th>Curso</th>
                    <th>Profesor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.NombreAlumno</td>
                        <td>@x.NombreCurso</td>
                        <td>@x.NombreProfesor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

