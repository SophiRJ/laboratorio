@using EmployeesDataBaseApp.Models
@model IEnumerable<Employee>


@{
    ViewData["Title"] = "AllEmployee";
}
<p>
    <a asp-controller="Employee" asp-action="AddEmployee" class="btn btn-dark">
        Add a new Employee
    </a>
</p>
<h3>All Employees List</h3>
@{
    if (Model.Count() < 1)
    {
        <p>No Employees Yet</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr class="table-dark">
                    <th>Employee Id</th>
                    <th>Employee Name</th>
                    <th>PricePerHour</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    @foreach(var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmployeeId</td>
                            <td>@employee.EmployeeName</td>
                            <td>@employee.PricePerHour</td>
                            <td><a asp-action="EditEmployee" asp-route-id="@employee.EmployeeId">Edit</a></td>
                            <td><a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId">Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}
