@using EmployeesDataBaseApp.Models
@model Employee

<div class="container">
    <form asp-controller="Employee" asp-action="AddEmployee" method="post">
        <div class="col-md-5 offset-sm-3">
            <label asp-for="EmployeeName" class="form-label">Name</label>
            <input asp-for="EmployeeName" class="form-control"/>
        </div>
        <div class="col-md-5 offset-sm-1">
            <label asp-for="PricePerHour" class="form-label">Price Per Hour</label>
            <input asp-for="PricePerHour" class="form-control" />
        </div>

        <div class="col-md-5 offset-sm-3">
            <button type="submit" class="btn btn-dark">Add a Employee</button>
        </div>
    </form>
</div>
